//cf way to long words
#include<iostream>
#include<string.h>
using namespace std;

 main()
{
    int x,i,t;
    cin >> t;
    char str[100];
    for (;0<t;t--) {
    scanf("%s",&str);
    x = strlen(str);
    if (x>10) {
        printf("%c%d%c\n",str[0],x-2,str[x-1]);
    }
    else {
        cout << str << endl;
    }
    }
    return 0;
}
